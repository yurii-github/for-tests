<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/4.8/phpunit.xsd"
stopOnFailure="false"
convertErrorsToExceptions="true" 
convertNoticesToExceptions="true"
convertWarningsToExceptions="true"
colors="true" 
bootstrap="bootstrap.php"
beStrictAboutTestsThatDoNotTestAnything="true"
beStrictAboutOutputDuringTests="true"
beStrictAboutTodoAnnotatedTests="true"
beStrictAboutChangesToGlobalState="false"
stderr="false"  
verbose="true">

	<testsuites >
		<testsuite name="unit"  >
			<directory suffix="Test.php" >unit</directory>
		</testsuite>
		<testsuite name="functional" >
			<directory suffix="Test.php" >functional</directory>
		</testsuite>
	</testsuites>
	
	<!--  -->
	<logging>
		<log  type="coverage-html" target="reports" />
	</logging>

	<filter>
		<whitelist>
			<directory>../app/controllers</directory>
			<directory>../app/models</directory>
			<directory>../framework</directory>
		</whitelist>
	</filter>

</phpunit>